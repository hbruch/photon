{
	"analysis": {
		"analyzer": {
			"index_ngram": {
				"tokenizer": "edge_ngram",
				"filter": [
					"lowercase",
					"german_normalization",
					"photon_hyphenation_decompounder"
				]
			},
			"search_ngram": {
				"char_filter": [
					"punctuationgreedy"
				],
				"tokenizer": "standard",
				"filter": [
					"lowercase",
					"german_normalization",
					"photon_hyphenation_decompounder"
				]
			},
			"index_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"photon_hyphenation_decompounder",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"search_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"photon_hyphenation_decompounder",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			}
		},
		"tokenizer": {
			"edge_ngram": {
				"type": "edge_ngram",
				"min_gram": 1,
				"max_gram": 100,
				"token_chars": [
					"letter",
					"digit"
				]
			}
		},
		"char_filter": {
			"punctuationgreedy": {
				"type": "pattern_replace",
				"pattern": "[\\.,']",
				"replacement": " "
			}
		},
		"filter": {
			"photonlength": {
				"min": "2",
				"type": "length"
			},
			"photon_hyphenation_decompounder": {
				"type" : "photon_hyphenation_decompounder",
				"hyphenation_patterns_path": "analysis/hyphenation_patterns.xml",
				"min_word_size": 6
			}
		}
	}
}
